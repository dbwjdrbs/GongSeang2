<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".Pass_SearchActivity" android:orientation="vertical" android:gravity="center" android:background="@android:color/white" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="30sp" android:textColor="@android:color/black" android:text="비밀번호 찾기" android:fontFamily="@font/nanum_barunpen_regular"/>

    <EditText android:layout_height="wrap_content" android:layout_width="250dp" android:inputType="textPersonName" android:hint=" 사용중인 아이디" android:ems="10" android:layout_marginTop="30dp" android:id="@+id/et_id" android:maxLength="15"/>

    <EditText android:layout_height="wrap_content" android:layout_width="250dp" android:inputType="textPersonName" android:hint=" 이름" android:ems="10" android:layout_marginTop="10dp" android:id="@+id/et_name"/>

    <EditText android:layout_height="wrap_content" android:layout_width="250dp" android:inputType="textPersonName" android:hint=" 이메일" android:ems="10" android:id="@+id/et_email" android:maxLength="30"/>

    <Button android:layout_height="wrap_content" android:layout_width="250dp" android:textSize="17sp" android:textColor="@android:color/white" android:text="확인" android:layout_marginTop="10dp" android:id="@+id/btn_OK_pass_search" android:backgroundTint="@android:color/black"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CommunityActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_barunpen_regular"
        android:text="게시판 선택"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_freeboard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/black"
        android:text="자유게시판"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_studyboard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:text="스터디게시판"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_recommendboard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:text="교재,강의추천게시판"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_testreviewboard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:text="합격후기게시판"
        android:textColor="@android:color/white" />

</LinearLayout>